<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- NuGet Package Metadata -->
    <PackageId>Facet.Search</PackageId>
    <Version>0.0.1</Version>
    <Authors>Tim Maes</Authors>
    <Description>Compile-time faceted search generation - attributes and source generators</Description>
    <PackageTags>facet;search;filtering;source-generator;dto;linq</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Tim-Maes/Facet.Search</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Tim-Maes/Facet.Search</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <!-- Include the generator DLL in the NuGet package as an analyzer -->
  <!-- Note: This is for packaging only, not for build-time reference -->
  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\Facet.Search.Generators\bin\$(Configuration)\netstandard2.0\Facet.Search.Generators.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>
</Project>
